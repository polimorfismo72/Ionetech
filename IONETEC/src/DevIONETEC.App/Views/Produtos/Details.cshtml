@model DevIONETEC.App.ViewModels.ProdutoViewModel
@{
    ViewData["Title"] = "Detalhe do Produto - " + Model.Nome + " - 000" + Model.Codigo;
}

<br />
<br />
<div class="container">
    <h1>@ViewData["Title"]</h1>

<div>
        <h4>Informação somente leitura</h4>
        <hr />
<div class="row" style="padding-top: 10px">
    <div style="padding-top: 10px" class="col-md-4">
        <img src="~/imagens/@Model.Imagem" alt="@Model.Imagem" style="width: 380px; height: 420px" />
    </div>
    <div class="col-md-4">
        <dl>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorCompra)
        </dt>
        <dd class = "col-sm-10">
                @Model.ValorCompra.ToString("C")
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorVenda)
        </dt>
        <dd class = "col-sm-10">
              @Model.ValorVenda.ToString("C")
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.QuantidadeEstoque)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuantidadeEstoque)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Filial)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Filial)
        </dd>
    </dl>
     
    </div>

    <div class="col-md-4">
        <dl>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ativo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ativo)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Fornecedor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Fornecedor.Documento)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Fabricante)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Fabricante.Nome)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Categoria)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Categoria.Nome)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DataCadastro)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataCadastro)
            </dd>

        </dl>
      
    </div>
 </div>
    <div>
        <a supress-by-claim-name="Produto" supress-by-claim-value="Editar" class="btn btn-dark" sp-action="Edit" asp-route-id="@Model.Id">Editar</a>
        <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
    </div>
</div>
</div>
<br />
