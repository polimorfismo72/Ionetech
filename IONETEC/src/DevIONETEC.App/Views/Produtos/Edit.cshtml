@model DevIONETEC.App.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Editar Produto " + Model.Nome;
}
<br />
<br />
<div class="container">
    <h1>@ViewData["Title"]</h1>

    <hr />
 
        <form enctype="multipart/form-data" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
          
            <h4>
               <div class="form-group">
                <label asp-for="FornecedorId" class="control-label"></label>
                <label>: <b>@Model.Fornecedor.Nome</b></label>
            </div>
               <div class="form-group">
                <label asp-for="FabricanteId" class="control-label"></label>
                <label>: <b>@Model.Fabricante.Nome</b></label>
            </div>
               <div class="form-group">
                <label asp-for="CategoriaId" class="control-label"></label>
                <label>: <b>@Model.Categoria.Nome</b></label>
            </div>
            </h4>
            <hr />
            <div class="row">
            <div class="form-group col-md-6">
           
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
           
            
                <label asp-for="Descricao" class="control-label"></label>
                <textarea cols="40" rows="5" asp-for="Descricao" class="form-control"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
          

            <div>
                <label>Imagem Atual</label><br />
                <img src="~/imagens/@Model.Imagem" alt="@Model.Imagem" style="width: 100px; height: 120px" />
            </div>
        </div>
      

            <div class="form-group col-md-6">
            <div style="padding-top:15px">
                <label asp-for="ImagemUpload" class="control-label"></label>
                <div class="custom-file">
                    <input type="file" class="form-control custom-file-input" id="ImagemUpload" asp-for="ImagemUpload">
                    <label data-browse="Procurar" style="width: 400px" class="custom-file-label" for="ImagemUpload"></label>
                    <label style="display: none" id="img_nome"></label>
                </div>
            </div>

            
                <label asp-for="ValorCompra" class="control-label"></label>
                <input asp-for="ValorCompra" class="form-control" />
                <span asp-validation-for="ValorCompra" class="text-danger"></span>
            
                <label asp-for="ValorVenda" class="control-label"></label>
                <input asp-for="ValorVenda" class="form-control" />
                <span asp-validation-for="ValorVenda" class="text-danger"></span>
            
                <label asp-for="QuantidadeEstoque" class="control-label"></label>
                <input asp-for="QuantidadeEstoque" class="form-control" />
                <span asp-validation-for="QuantidadeEstoque" class="text-danger"></span>
            
               <div>
                <label asp-for="Filial" class="control-label"></label>
                <input asp-for="Filial" class="form-control" />
                <span asp-validation-for="Filial" class="text-danger"></span>
               </div>
            <div>
                &nbsp;
            </div>
            <div class="form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                </label>
            </div>
            </div>
      
            </div>
            
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
            </div>
        </form>
</div>
<br />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $("#ImagemUpload").change(function () {
            $("#img_nome").text(this.files[0].name);
            $("#img_nome")[0].style.display = 'block';
        });
    </script>
}
