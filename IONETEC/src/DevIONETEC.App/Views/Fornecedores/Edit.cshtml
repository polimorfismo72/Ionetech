@model DevIONETEC.App.ViewModels.FornecedorViewModel

@{
    ViewData["Title"] = "Editar Fornecedor";
}
<br />
<br />
<div class="container">
<h1>@ViewData["Title"]</h1>

<hr />
<form asp-action="Edit">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="form-group col-md-6">
            
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
        
                <label asp-for="Documento" class="control-label"></label>
                <input asp-for="Documento" class="form-control" />
                <span asp-validation-for="Documento" class="text-danger"></span>
          
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>

                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>

        <div class="form-group col-md-6">
          
                <label asp-for="Endereco" class="control-label"></label>
               <textarea cols="40" rows="5" asp-for="Endereco" class="form-control"></textarea>
                <span asp-validation-for="Endereco" class="text-danger"></span>
            
            <label asp-for="TipoFornecedor"></label>
            <div>
                <input type="radio" value="1" asp-for="TipoFornecedor" checked="@(Model.TipoFornecedor == 1)" /> Fornecedor Físico
                <input type="radio" value="2" asp-for="TipoFornecedor" checked="@(Model.TipoFornecedor == 2)" /> Fornecedor Jurídico
            </div>
            <div>
                &nbsp;
            </div>
            <div class="form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                </label>
            </div>

        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
    </div>
</form>


<hr />
<h4>Produtos</h4>
<div>
    <partial name="_ListaProdutos" model="@Model.Produtos" />
       @*  <partial name="../Produtos/_ListaProdutos" model="@Model.Produtos" /> *@
</div>
</div>
<br />
<br />
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
