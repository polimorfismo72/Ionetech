                        <span class="fs-5 fw-bold">(+244) 929 28 38 38</span>
                    </div>
                </div>
            </div>
        </div>
        <!-- Topbar End -->
       
        <nav class="navbar navbar-expand-lg bg-white navbar-light sticky-top py-0 pe-5">

            <a asp-controller="Home" asp-action="Index" class="navbar" style="width: 25%; height: 20%;left: 30px;">
                <img src="~/imagens/logo/logo-Ionetech.png" style="width: 35%; height: 40%;" />
            </a> 

            <button type="button" class="navbar-toggler me-3" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto p-4 p-lg-0">
                    <a class="nav-item nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="nav-item nav-link" asp-area="" asp-controller="Home" asp-action="About">Sobre</a>
                    <a class="nav-item nav-link" asp-area="" asp-controller="Home" asp-action="Services">Serviços</a>
                  
                    
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Cadastros</a>
                        <div class="dropdown-menu bg-light m-0">
                            <a asp-controller="Fornecedores" asp-action="Index" class="dropdown-item">Fornecedores</a>
                            <a asp-controller="Produtos" asp-action="Index" class="dropdown-item">Produtos</a>
                            <a asp-controller="Clientes" asp-action="Index" class="dropdown-item">Clientes</a>
                            <a asp-controller="Pedidos" asp-action="Index" class="dropdown-item">Pedidos</a>
                            <a asp-controller="Pedidos" asp-action="Create" class="dropdown-item">Vendas</a>
                            <a asp-controller="Home" asp-action="About" class="dropdown-item">Testimonial</a>
                            <a asp-controller="Home" asp-action="About" class="dropdown-item">404 Page</a>
                        </div>
                    </div>
                  
                        <partial name="_LoginPartial" />
                   
                </div>
            </div>
            
        </nav>
    </header>
 
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
       
