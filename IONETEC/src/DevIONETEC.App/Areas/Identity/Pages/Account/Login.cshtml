@page
@model LoginModel

@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Login de usuário";
}

<section class="section-conten padding-y container" style="min-height:35vh">

    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

